Ejercicio 6
#include <iostream>
using namespace std;
int main() {
nombre_completo = input("Ingrese su nombre y apellido separados por un espacio: ")
apellido, nombre = nombre_completo.split()

nombre_formateado = apellido + ", " + nombre

print("Su nombre completo es:", nombre_formateado)

 return 0;
}

Ejercicio 7
#include <iostream>
using namespace std;
int main() {
# Leer los títulos de los libros
titulo1 = input("Ingrese el título del primer libro: ")
titulo2 = input("Ingrese el título del segundo libro: ")
titulo3 = input("Ingrese el título del tercer libro: ")

# Imprimir los títulos en orden inverso
print("Títulos en orden inverso:")
print(titulo3)
print(titulo2)
print(titulo1)
# Leer los títulos de los libros como una sola entrada de varias líneas
titulos = input("Ingrese los títulos de los tres libros separados por una nueva línea:\n")

# Dividir la entrada en títulos separados
titulo1, titulo2, titulo3 = titulos.split("\n")

# Imprimir los títulos en orden inverso
print("Títulos en orden inverso:")
print(titulo3)
print(titulo2)
print(titulo1)

 return 0;
}


Ejercicio 8
#include <iostream>
using namespace std;
int main() {
# Leer las cinco palabras de la entrada estándar
palabras = input("Ingrese cinco palabras separadas por un espacio: ")

# Dividir las palabras en una lista
lista_palabras = palabras.split()

# Imprimir el primer caracter de cada palabra
for palabra in lista_palabras:
    print(palabra[0])

 return 0;
}


Ejercicio 9
#include <iostream>
using namespace std;
int main() {
# Leer dos enteros no negativos separados por un espacio
a, b = map(int, input("Ingrese dos enteros no negativos separados por un espacio: ").split())

# Calcular la suma de a y b
suma = a + b

# Calcular el número de dígitos en la notación decimal de la suma
num_digitos = len(str(suma))

# Calcular el producto de la suma por el número de dígitos
producto = suma * num_digitos

# Imprimir el resultado
print("El producto de la suma por el número de dígitos en su notación decimal es:", producto)

 return 0;
}

