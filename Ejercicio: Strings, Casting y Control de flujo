Ejercicio 1
import java.util.Scanner;

public class SumaEntera {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese el primer número: ");
        double num1 = sc.nextDouble();

        System.out.print("Ingrese el segundo número: ");
        double num2 = sc.nextDouble();

        int sumaEntera = (int) (num1 + num2);

        System.out.println("La parte entera de la suma es: " + sumaEntera);
    }
}


Ejercicio 2
num1 = float(input("Ingrese el primer número: "))
num2 = float(input("Ingrese el segundo número: "))

cociente = num1 / num2

print("El cociente es:", cociente)

 return 0;
}


Ejercicio 3 
#include <iostream>
while True:
    try:
        ancho = int(input("Ingrese el ancho del rectángulo: "))
        alto = int(input("Ingrese el alto del rectángulo: "))
        break
    except ValueError:
        print("Error: Por favor, ingrese un valor numérico entero.")

area = ancho * alto
print("El área del rectángulo es:", area)

 return 0;
}


